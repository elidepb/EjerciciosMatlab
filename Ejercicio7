
% Pedir al usuario que ingrese la función y los límites de la integral
disp('Ingrese la función para la integración:');

func = input('f(x) = ','s');
f=inline(func);

a = input('Ingrese el límite inferior (a): ');
b = input('Ingrese el límite superior (b): ');

% Número de subintervalos (debe ser divisible por 3)
n = 1000;


% Longitud de cada subintervalo
h = (b - a) / n;

% Calcular el valor aproximado de la integral usando la regla de Simpson 3/8

y_par=0;
y_impar=0;
for i=1:999
    xi=a+i*h;
    if mod(i,2)==0
        y_par=y_par+f(xi);
    else
         y_impar=y_impar+f(xi);
    end
end

integral_aprox=(h/3)*(f(a)+2*y_par+4*y_impar+f(b));
fprintf('\t\tResultado: %5.6f\n',integral_aprox);
